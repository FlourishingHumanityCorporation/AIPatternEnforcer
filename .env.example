# Hook Development Mode - enables modification of protected infrastructure
HOOK_DEVELOPMENT=true

# Hook Testing Mode - enables testing of hook functionality
HOOK_TESTING=true

# Next.js Configuration
NODE_ENV=development

# Database Configuration (Required for Prisma)
DATABASE_URL=postgresql://username:password@localhost:5432/projecttemplate

# Local Development (No authentication required)
# For local one-person apps - authentication is mocked

# AI API Keys (Choose the ones you need)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Local AI Model Endpoints (Optional)
OLLAMA_BASE_URL=http://localhost:11434
LOCALAI_BASE_URL=http://localhost:8080

# Additional AI Configuration
# AI_MODEL=gpt-4
# AI_TEMPERATURE=0.7
# AI_MAX_TOKENS=4000

# Monitoring and Logging
LOG_LEVEL=debug
# SENTRY_DSN=

# Feature Flags
ENABLE_DEBUG_MODE=true