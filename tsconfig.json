{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/tools/*": ["./tools/*"],
      "@/scripts/*": ["./scripts/*"],
      "@/templates/*": ["./templates/*"]
    }
  },
  "include": [
    "tools/**/*.ts",
    "tools/**/*.js",
    "scripts/**/*.ts", 
    "scripts/**/*.js",
    "tests/**/*.ts",
    "tests/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "examples/**/node_modules",
    "templates/**/node_modules",
    "tools/hooks/**/*",
    ".next",
    "**/*.test.ts",
    "**/*.test.js"
  ]
}