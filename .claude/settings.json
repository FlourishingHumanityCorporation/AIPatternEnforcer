{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "node tools/hooks/pre-tool-use-parallel.js",
            "timeout": 5,
            "description": "Parallel execution of all PreToolUse hooks for Write|Edit|MultiEdit operations"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "node tools/hooks/pre-tool-use-write-parallel.js",
            "timeout": 3,
            "description": "Parallel execution of Write-only PreToolUse hooks"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "node tools/hooks/post-tool-use-parallel.js",
            "timeout": 5,
            "description": "Parallel execution of all PostToolUse hooks for Write|Edit|MultiEdit operations"
          }
        ]
      }
    ]
  }
}
