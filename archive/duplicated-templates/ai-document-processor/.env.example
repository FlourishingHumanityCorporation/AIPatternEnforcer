# Database
DATABASE_URL="postgresql://username:password@localhost:5432/ocr_documents"

# File Storage
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="10485760"  # 10MB in bytes
ALLOWED_FILE_TYPES="pdf,png,jpg,jpeg,tiff,bmp,gif,doc,docx"

# OCR Settings
DEFAULT_OCR_LANGUAGE="eng"
OCR_LANGUAGES="eng,spa,fra,deu"  # Available languages
TESSERACT_CACHE_SIZE="100"
ENABLE_HANDWRITING_DETECTION="false"

# AI Services (Optional)
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""

# Processing
MAX_CONCURRENT_JOBS="3"
PROCESSING_TIMEOUT="300000"  # 5 minutes in milliseconds
RETRY_ATTEMPTS="3"

# Security
ALLOWED_ORIGINS="http://localhost:3000"
API_RATE_LIMIT="100"  # requests per minute

# Logging
LOG_LEVEL="info"
LOG_FILE="./logs/ocr-processor.log"

# Performance
THUMBNAIL_QUALITY="80"
THUMBNAIL_SIZE="200x300"
TEXT_CHUNK_SIZE="1000"  # characters per chunk

# Cache
REDIS_URL=""  # Optional for caching
CACHE_TTL="3600"  # seconds

# Monitoring
ENABLE_METRICS="true"
METRICS_RETENTION_DAYS="30"