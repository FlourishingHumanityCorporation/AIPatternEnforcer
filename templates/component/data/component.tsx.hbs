import React from 'react';
import styles from './{{name}}.module.css';

export interface {{name}}Props {
  /** Primary content */
  children?: React.ReactNode;
  /** Optional CSS class */
  className?: string;
  /** Loading state */
  isLoading?: boolean;
  /** Error state */
  error?: string | null;
  /** Disabled state */
  disabled?: boolean;
  /** Data to display */
  data?: any[];
  /** Empty state message */
  emptyMessage?: string;
  /** Test ID for testing */
  testId?: string;
}

/**
 * {{name}} component - Tables, grids, charts - components that display data sets
 * 
 * @example
 * <{{name}} data={[{id: 1, name: 'Item 1'}]}>
 *   Content here
 * </{{name}}>
 */
export const {{name}}: React.FC<{{name}}Props> = ({
  children,
  className = '',
  isLoading = false,
  error = null,
  disabled = false,
  data = [],
  emptyMessage = "No data available",
  testId = '{{kebabCase name}}'
}) => {
  // Loading state
  if (isLoading) {
    return (
      <div className={`${styles.container} ${styles.loading} ${className}`} data-testid={`${testId}-loading`}>
        <span className={styles.spinner} aria-label="Loading..." />
      </div>
    );
  }

  // Error state
  if (error) {
    return (
      <div className={`${styles.container} ${styles.error} ${className}`} data-testid={`${testId}-error`}>
        <span role="alert">{error}</span>
      </div>
    );
  }

  // Empty state
  if (data.length === 0) {
    return (
      <div className={`${styles.container} ${styles.empty} ${className}`} data-testid={`${testId}-empty`}>
        <p>{emptyMessage}</p>
      </div>
    );
  }

  return (
    <div 
      className={`${styles.container} ${className}`}
      data-testid={testId}
    >
      {children}
    </div>
  );
};

{{name}}.displayName = '{{name}}';