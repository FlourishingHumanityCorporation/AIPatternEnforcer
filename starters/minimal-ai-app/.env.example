# ===================================================================
# Minimal AI App Configuration
# ===================================================================
# Copy this to .env and add your API keys
# ===================================================================

# 🛡️ Protection Settings (keep these enabled!)
HOOKS_DISABLED=false
HOOK_VERBOSE=false

# 🗄️ Database
# Option 1: PostgreSQL (recommended)
DATABASE_URL=postgresql://postgres:password@localhost:5432/my_ai_app

# Option 2: SQLite (easiest - just works!)
# DATABASE_URL=file:./dev.db

# 🤖 AI Services (add at least one)
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# 🌐 App Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# 📝 Optional Settings
LOG_LEVEL=debug
ENABLE_DEBUG_MODE=true