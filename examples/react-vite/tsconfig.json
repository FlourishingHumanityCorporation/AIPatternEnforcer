{
  "extends": "./config/typescript/tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@features/*": [
        "src/features/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@types/*": [
        "src/types/*"
      ],
      "@config/*": [
        "src/config/*"
      ]
    },
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/App.tsx",
    "src/main.tsx",
    "src/components/**/[!*test*].ts",
    "src/components/**/[!*test*].tsx",
    "tests/example.test.ts",
    "*.ts",
    "*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "extensions/**/*",
    "tests/test-fresh-install/**/*",
    "tools/**/*.js",
    "scripts/**/*.js"
  ]
}
