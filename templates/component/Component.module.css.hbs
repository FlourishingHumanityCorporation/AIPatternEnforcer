/* {{name}} Component Styles */

.container {
  /* Base container styles */
  display: flex;
  flex-direction: column;
  gap: 1rem;
  padding: 1rem;
  border-radius: 0.5rem;
  background-color: var(--background-primary, #ffffff);
  border: 1px solid var(--border-color, #e5e7eb);
  transition: all 0.2s ease-in-out;
}

.container:hover {
  border-color: var(--border-hover, #d1d5db);
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
}

/* Interactive states */
.container.interactive {
  cursor: pointer;
  user-select: none;
}

.container.interactive:hover {
  background-color: var(--background-hover, #f9fafb);
}

.container.interactive:active {
  transform: scale(0.99);
}

.container.interactive:focus-visible {
  outline: 2px solid var(--focus-color, #3b82f6);
  outline-offset: 2px;
}

/* Loading state */
.container.loading {
  opacity: 0.6;
  pointer-events: none;
}

.container.loading::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 20px;
  height: 20px;
  border: 2px solid var(--loading-color, #e5e7eb);
  border-top: 2px solid var(--accent-color, #3b82f6);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: translate(-50%, -50%) rotate(0deg); }
  100% { transform: translate(-50%, -50%) rotate(360deg); }
}

/* Error state */
.container.error {
  border-color: var(--error-color, #ef4444);
  background-color: var(--error-background, #fef2f2);
}

/* Success state */
.container.success {
  border-color: var(--success-color, #10b981);
  background-color: var(--success-background, #f0fdf4);
}

/* Size variants */
.container.small {
  padding: 0.5rem;
  gap: 0.5rem;
  font-size: 0.875rem;
}

.container.large {
  padding: 1.5rem;
  gap: 1.5rem;
  font-size: 1.125rem;
}

/* Theme variants */
.container.theme-primary {
  background-color: var(--primary-color, #3b82f6);
  color: var(--primary-text, #ffffff);
  border-color: var(--primary-border, #2563eb);
}

.container.theme-secondary {
  background-color: var(--secondary-color, #6b7280);
  color: var(--secondary-text, #ffffff);
  border-color: var(--secondary-border, #4b5563);
}

.container.theme-accent {
  background-color: var(--accent-color, #8b5cf6);
  color: var(--accent-text, #ffffff);
  border-color: var(--accent-border, #7c3aed);
}

/* Content styling */
.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.5rem;
}

.title {
  font-size: 1.125rem;
  font-weight: 600;
  color: var(--text-primary, #111827);
  margin: 0;
}

.subtitle {
  font-size: 0.875rem;
  color: var(--text-secondary, #6b7280);
  margin: 0;
}

.body {
  flex: 1;
  color: var(--text-primary, #111827);
  line-height: 1.6;
}

.footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 0.5rem;
}

/* Action buttons */
.actions {
  display: flex;
  gap: 0.5rem;
  align-items: center;
}

.action {
  display: inline-flex;
  align-items: center;
  gap: 0.25rem;
  padding: 0.25rem 0.5rem;
  border: 1px solid var(--border-color, #e5e7eb);
  border-radius: 0.25rem;
  background-color: var(--background-primary, #ffffff);
  color: var(--text-primary, #111827);
  text-decoration: none;
  font-size: 0.875rem;
  cursor: pointer;
  transition: all 0.2s ease-in-out;
}

.action:hover {
  background-color: var(--background-hover, #f9fafb);
  border-color: var(--border-hover, #d1d5db);
}

.action:active {
  transform: scale(0.98);
}

.action:focus-visible {
  outline: 2px solid var(--focus-color, #3b82f6);
  outline-offset: 2px;
}

.action.primary {
  background-color: var(--primary-color, #3b82f6);
  color: var(--primary-text, #ffffff);
  border-color: var(--primary-border, #2563eb);
}

.action.primary:hover {
  background-color: var(--primary-hover, #2563eb);
}

/* Responsive design */
@media (max-width: 768px) {
  .container {
    padding: 0.75rem;
    gap: 0.75rem;
  }
  
  .container.small {
    padding: 0.5rem;
  }
  
  .container.large {
    padding: 1rem;
  }
  
  .header {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.5rem;
  }
  
  .actions {
    flex-direction: column;
    width: 100%;
  }
  
  .action {
    width: 100%;
    justify-content: center;
  }
}

@media (max-width: 480px) {
  .container {
    padding: 0.5rem;
    gap: 0.5rem;
  }
  
  .title {
    font-size: 1rem;
  }
  
  .subtitle {
    font-size: 0.75rem;
  }
  
  .body {
    font-size: 0.875rem;
  }
}

/* Dark mode support */
@media (prefers-color-scheme: dark) {
  .container {
    background-color: var(--dark-background-primary, #1f2937);
    border-color: var(--dark-border-color, #374151);
    color: var(--dark-text-primary, #f9fafb);
  }
  
  .container:hover {
    background-color: var(--dark-background-hover, #111827);
    border-color: var(--dark-border-hover, #4b5563);
  }
  
  .title {
    color: var(--dark-text-primary, #f9fafb);
  }
  
  .subtitle {
    color: var(--dark-text-secondary, #9ca3af);
  }
  
  .body {
    color: var(--dark-text-primary, #f9fafb);
  }
  
  .action {
    background-color: var(--dark-background-primary, #1f2937);
    border-color: var(--dark-border-color, #374151);
    color: var(--dark-text-primary, #f9fafb);
  }
  
  .action:hover {
    background-color: var(--dark-background-hover, #111827);
    border-color: var(--dark-border-hover, #4b5563);
  }
}

/* High contrast mode support */
@media (prefers-contrast: high) {
  .container {
    border-width: 2px;
  }
  
  .action {
    border-width: 2px;
  }
  
  .container:focus-visible,
  .action:focus-visible {
    outline-width: 3px;
  }
}

/* Reduced motion support */
@media (prefers-reduced-motion: reduce) {
  .container,
  .action {
    transition: none;
  }
  
  .container.interactive:active,
  .action:active {
    transform: none;
  }
  
  .container.loading::after {
    animation: none;
  }
}